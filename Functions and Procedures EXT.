vowels = ["a", "e", "i", "o", "u"]
def count_vowels(word):
    vowels_in_word = []
    itr_count = 0
    count = 0
    for char in word:
        
        if vowels in word.lower():
            count += 1

    return count

total = count_vowels("cheese")
print(total)
